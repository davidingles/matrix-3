    // Set the `nav` element's `opacity` property to `0`
    nav.style.opacity = "1";

    // Animate the `nav` element's `opacity` property to `1` over a period of 1 second
    nav.animate({
        opacity: "1",
        top: '22px'
    }, 2000);
    nav.style.animationDuration= '0s'
    }

</script>